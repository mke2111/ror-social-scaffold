<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>



  <h3><%= link_to 'Add as friend', user_friendship_path(current_user, :friendship => {:friend_id => @user.id}), method: :post%></h3>


  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
